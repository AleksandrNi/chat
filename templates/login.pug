extends layout

block append assets
  script(src="/script.js")
  link(rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/3.3.7/css/bootstrap.min.css")
  link(rel="stylesheet" href="/style.css")

block content
  .container
    include messages
    
    form.login-form(action="/login" method="post")
      h1 Please sign in

      input(type='hidden', name='_csrf', value=csrf)

      .form-group
        label(for="email") Email
        input.form-control(type="email" id="email" name="email" placeholder="my@mail.com" required autofocus)
      .form-group
        label(for="password") Password
        input.form-control(type="password" id="password" name="password" required)


      button.btn.btn-lg.btn-primary.btn-block(type="submit") Login
      br
      a.btn.btn-lg.btn-primary.btn-block(href="/login/facebook" data-provider="facebook") Login via Facebook
      br
      a.btn.btn-lg.btn-primary.btn-block(href="/register") Registration
